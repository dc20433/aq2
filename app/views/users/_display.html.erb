<%# image_tag('assets/image/.jpg', style: "height: 30px; width: 30px") %>
<style>
.screen {
  background-image: url('pine_trees.jpg');
  background-size: cover;
  min-height: 88vh;
  position: relative;
  color: black;
  Text-shadow: 4px 4px 4px rgba(0,0,0,.65);
}
h6 {
  font-size: 3.3rem;
  color: red;
}
.color-overlay {
  position: absolute;
  width: 100%;
  height: 45%;
}
</style>

<div 
  class="screen"
  style="background-image: url(<%= asset_path 'pine_trees.jpg' %> );">
  <div class="color-overlay d-flex justify-content-center mt-5 pt-5">
    
    <div class="card mt-3 mx-auto border-primary" style="width: 30rem;">
      <img src="..." class="card-img-top" alt="">
      <div class="card-title bg-secondary">
        <h2 class="text-center text-white mt-3 mb-4">
          Permitted Users
        </h2>
      </div>
      <div class="card-body">
        <div class="card-text">
          <%= render "form", user:@user %>
        </div>
      </div>
    </div>

  </div>
</div>





