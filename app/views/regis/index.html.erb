<% if (current_user && current_user.Manager?) || (current_user && current_user.Admin?) %>


<%# image_tag('assets/image/.jpg', style: "height: 30px; width: 30px") %>
<style>
.screen {
  background-image: url('pine_trees.jpg');
  background-size: cover;
  min-height: 100vh;
  position: relative;
  color: black;
  Text-shadow: 4px 4px 4px rgba(0,0,0,.2);
}
h6 {
  font-size: 3.3rem;
  color: red;
}
.color-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
}
</style>

<div 
  class="screen"
  style="background-image: url(<%= asset_path 'pine_trees.jpg' %> );">
  <div class="color-overlay d-flex justify-content-center mt-5 pt-5">
    
    <div class="col-4 mx-auto mt-3">
        <div class="card shadow border-dark">
          <div class="card-header">
            <h2 class="card-title text-center">Patient Listing</h2>
          </div>
          <div class="card-body">

            <%= link_to "New Patient", new_regi_path, class: "btn btn-sm btn-outline-dark ps-3 pe-3 rounded-pill" %>
            <%= render 'search' %>

            <table class="table table-sm table-striped table-hover mx-auto mt-1">
              <thead class="table-primary">
                <tr>
                  <th>Last Name</th>
                  <th>First Name</th>
                  <th>M. Initial</th>
                  <th>Gender</th>
                  <th>Date of Birth</th>
                  <th style="width:150px"></th>
                </tr>
              </thead>
            <% @regis.order('last_name ASC').each do |regi| %>

              <tr>
                <td><%= link_to regi.last_name, regi_path(regi.id) %></td>
                <td><%= regi.first_name %></td>
                <td><%= regi.init %></td>
                <td><%= regi.gender %></td>
                <td><%= regi.dob %></td>
                
                <td>
                <%= link_to 'Records', regi_patients_path(regi.id), class: "btn btn-outline-primary btn-sm rounded-pill" %>
                <%= link_to 'Charts', regi_charts_path(regi.id), class: "btn btn-outline-success btn-sm rounded-pill" %>
                </td>

              </tr>
              <% end %>
            </table>



          </div>
        </div>
      </div>
  </div>
</div>



<% end %>