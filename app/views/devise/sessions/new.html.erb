<%# image_tag('assets/image/.jpg', style: "height: 30px; width: 30px") %>
<style>
.screen {
  background-image: url('pine_trees.jpg');
  background-size: cover;
  min-height: 100vh;
  position: relative;
  color: black;
  Text-shadow: 4px 4px 4px rgba(0,0,0,.2);
}
h6 {
  font-size: 3.3rem;
  color: red;
}
.color-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
}
</style>

<div 
  class="screen"
  style="background-image: url(<%= asset_path 'pine_trees.jpg' %> );">
  <div class="color-overlay d-flex justify-content-center mt-5 pt-5">
    
    <div class="col-4 mx-auto mt-3">
        <div class="card shadow border-dark">
          <div class="card-header">
            <h2 class="card-title text-center">Log in</h2>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class='form-group'>
              <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:'form-control border-primary' %>
              </div>

              <div class='form-group'>
                <b><%= f.label :password, class:'pt-2' %></b>
                <%= f.password_field :password, autocomplete: "current-password", class:'form-control border-primary mb-3' %>
              </div>
            
              <% if devise_mapping.rememberable? %>
                <div class='form-group'>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Submit", class:'btn btn-sm btn-primary mt-2 mb-2 rounded-pill' %>
              </div>
            <% end %>            
          </div>
        </div>
      </div>
  </div>
</div>

  
